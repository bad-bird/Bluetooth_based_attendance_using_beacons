        </activity>
        <activity
            android:name=".StudentClassActivity"
            android:label="@string/title_activity_student_class"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".AttendanceActivity"
            android:label="@string/title_activity_attendance"
            android:theme="@style/AppTheme.NoActionBar" >
